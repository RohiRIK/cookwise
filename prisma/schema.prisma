// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now()) @map(name: "created_at")
  updatedAt         DateTime @default(now()) @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map(name: "accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map(name: "sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @default(now()) @map(name: "updated_at")

  accounts Account[]
  sessions Session[]
  Post     Post[]

  householdId String?
  household   Household? @relation(fields: [householdId], references: [id])

  recipes       Recipe[]
  pantryItems   PantryItem[]
  mealPlans     MealPlan[]
  shoppingLists ShoppingList[]

  stripeCustomerId       String?            @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?            @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?            @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime?          @map(name: "stripe_current_period_end")
  shoppingListItems      ShoppingListItem[]

  @@map(name: "users")
}

model Household {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @default(now()) @map(name: "updated_at")

  users User[]

  recipes       Recipe[]
  pantryItems   PantryItem[]
  mealPlans     MealPlan[]
  shoppingLists ShoppingList[]

  @@map(name: "households")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map(name: "verification_tokens")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   Json?
  published Boolean  @default(false)
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @default(now()) @map(name: "updated_at")
  authorId  String

  author User @relation(fields: [authorId], references: [id])

  @@map(name: "posts")
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  SNACK
}

enum PantryStatus {
  IN_STOCK
  LOW
  OUT
}

enum RecipeSourceType {
  MANUAL
  OCR_IMAGE
  OCR_PDF
  URL_SCRAPER
  IMPORT
}

enum IngredientCategory {
  PRODUCE
  DAIRY
  MEAT
  SEAFOOD
  GRAINS
  CANNED
  SPICES
  OILS
  BAKING
  BEVERAGES
  FROZEN
  CONDIMENTS
  OTHER
}

enum UnitType {
  PIECE
  GRAM
  KILOGRAM
  MILLILITER
  LITER
  CUP
  TABLESPOON
  TEASPOON
  OUNCE
  POUND
  PINCH
  TO_TASTE
}

model Recipe {
  id          String           @id @default(cuid())
  title       String
  description String?
  sourceType  RecipeSourceType
  sourceUrl   String?
  prepTime    Int?
  cookTime    Int?
  servings    Int              @default(4)
  difficulty  String?
  tags        String[]
  rating      Int?
  notes       String?
  imageUrl    String?
  householdId String?
  creatorId   String?
  createdAt   DateTime         @default(now()) @map(name: "created_at")
  updatedAt   DateTime         @default(now()) @map(name: "updated_at")

  household Household? @relation(fields: [householdId], references: [id])
  creator   User?      @relation(fields: [creatorId], references: [id])

  ingredients       RecipeIngredient[]
  steps             InstructionStep[]
  mealPlans         MealPlan[]
  shoppingListItems ShoppingListItem[]

  @@map(name: "recipes")
}

model Ingredient {
  id        String             @id @default(cuid())
  name      String             @unique
  category  IngredientCategory
  createdAt DateTime           @default(now()) @map(name: "created_at")
  updatedAt DateTime           @default(now()) @map(name: "updated_at")

  recipeIngredients RecipeIngredient[]
  pantryItems       PantryItem[]
  shoppingListItems ShoppingListItem[]

  @@map(name: "ingredients")
}

model RecipeIngredient {
  id           String   @id @default(cuid())
  recipeId     String
  ingredientId String
  quantity     Float
  unit         UnitType
  originalText String
  notes        String?
  createdAt    DateTime @default(now()) @map(name: "created_at")
  updatedAt    DateTime @default(now()) @map(name: "updated_at")

  recipe     Recipe     @relation(fields: [recipeId], references: [id])
  ingredient Ingredient @relation(fields: [ingredientId], references: [id])

  @@map(name: "recipe_ingredients")
}

model InstructionStep {
  id          String   @id @default(cuid())
  recipeId    String
  stepNumber  Int
  instruction String
  imageUrl    String?
  createdAt   DateTime @default(now()) @map(name: "created_at")
  updatedAt   DateTime @default(now()) @map(name: "updated_at")

  recipe Recipe @relation(fields: [recipeId], references: [id])

  @@map(name: "instruction_steps")
}

model PantryItem {
  id           String       @id @default(cuid())
  ingredientId String
  householdId  String?
  quantity     Float
  unit         UnitType
  minQuantity  Float
  status       PantryStatus
  expiryDate   DateTime?
  location     String?
  notes        String?
  userId       String?
  createdAt    DateTime     @default(now()) @map(name: "created_at")
  updatedAt    DateTime     @default(now()) @map(name: "updated_at")

  ingredient Ingredient @relation(fields: [ingredientId], references: [id])
  household  Household? @relation(fields: [householdId], references: [id])
  user       User?      @relation(fields: [userId], references: [id])

  @@unique([householdId, ingredientId])
  @@map(name: "pantry_items")
}

model MealPlan {
  id          String    @id @default(cuid())
  recipeId    String
  householdId String?
  userId      String?
  date        DateTime
  mealType    MealType
  servings    Int
  notes       String?
  isCooked    Boolean   @default(false)
  cookedAt    DateTime?
  createdAt   DateTime  @default(now()) @map(name: "created_at")
  updatedAt   DateTime  @default(now()) @map(name: "updated_at")

  recipe    Recipe     @relation(fields: [recipeId], references: [id])
  household Household? @relation(fields: [householdId], references: [id])
  user      User?      @relation(fields: [userId], references: [id])

  @@unique([householdId, recipeId, date, mealType])
  @@map(name: "meal_plans")
}

model ShoppingList {
  id          String   @id @default(cuid())
  householdId String?
  userId      String?
  name        String   @default("Weekly List")
  weekOf      DateTime
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now()) @map(name: "created_at")
  updatedAt   DateTime @default(now()) @map(name: "updated_at")

  household Household? @relation(fields: [householdId], references: [id])
  user      User?      @relation(fields: [userId], references: [id])

  items ShoppingListItem[]

  @@map(name: "shopping_lists")
}

model ShoppingListItem {
  id              String             @id @default(cuid())
  shoppingListId  String
  ingredientId    String?
  name            String
  quantity        Float
  unit            UnitType
  category        IngredientCategory
  aisle           String?
  estimatedPrice  Float?
  isChecked       Boolean            @default(false) @map(name: "is_checked")
  checkedAt       DateTime?
  checkedByUserId String?
  notes           String?
  recipeId        String?
  createdAt       DateTime           @default(now()) @map(name: "created_at")
  updatedAt       DateTime           @default(now()) @map(name: "updated_at")

  shoppingList  ShoppingList @relation(fields: [shoppingListId], references: [id])
  ingredient    Ingredient?  @relation(fields: [ingredientId], references: [id])
  recipe        Recipe?      @relation(fields: [recipeId], references: [id])
  checkedByUser User?        @relation(fields: [checkedByUserId], references: [id])

  @@map(name: "shopping_list_items")
}
